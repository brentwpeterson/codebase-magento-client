<?xml version="1.0"?>
<config>
    <tabs>
        <wage translate="label" module="codebaseclient">
            <label>Wagento</label>
            <sort_order>50</sort_order>
        </wage>
    </tabs>
    <sections>
        <codebaseclient translate="label" module="codebaseclient">
            <label>Wagento Codebase Client</label>
            <sort_order>10</sort_order>
            <tab>wage</tab>
            <show_in_default>1</show_in_default>se
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label" module="codebaseclient">
                    <label>Settings</label>
                    <sort_order>5</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <host translate="label" module="codebaseclient">
                            <label>API Host</label>
                            <comment>needs to begin with http:// or https://</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </host>
                        <apiuser translate="label" module="codebaseclient">
                            <label>API user</label>
                            <comment></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>05</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </apiuser>
                        <apikey translate="label" module="codebaseclient">
                            <label>API Key</label>
                            <comment></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </apikey>
                        <projects translate="label" module="codebaseclient">
                            <label>Project Permalink</label>
                            <comment>Please add your project permalink here. If you have more than one project then please add permalinks comma sperated.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </projects>
                        <codebaselog translate="label">
                            <label>Enable debug logs</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </codebaselog>
                    </fields>
                </general>
            </groups>
        </codebaseclient>
    </sections>
</config>
